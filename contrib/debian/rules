#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

#DEB_MAKE_CHECK_TARGET = test_cosmoscoin
#build/cosmoscoind::
#	$(if $(filter nocheck,$(DEB_BUILD_OPTIONS)),,src/test_cosmoscoin)

DEB_INSTALL_EXAMPLES_cosmoscoind += debian/examples/*
DEB_INSTALL_MANPAGES_cosmoscoind += debian/manpages/*

%:
	dh --with bash-completion $@

override_dh_auto_build:
	cd src; $(MAKE) -f makefile.unix cosmoscoind
	$(MAKE)

override_dh_auto_clean:
	if [ -f Makefile ]; then $(MAKE) clean; else rm -rf build/; rm -f cosmoscoin-qt; fi
	cd src; $(MAKE) -f makefile.unix clean

override_dh_auto_configure:
	qmake cosmoscoin-qt.pro USE_QRCODE=1

override_dh_auto_test:
	cd src; $(MAKE) -f makefile.unix test_cosmoscoin
	src/test_cosmoscoin

# Ensure wrapper is set executable
binary-post-install/cosmoscoind:
	chmod +x $(cdbs_curdestdir)usr/bin/cosmoscoind
binary-post-install/cosmoscoin-qt:
	chmod +x $(cdbs_curdestdir)usr/bin/cosmoscoin-qt
